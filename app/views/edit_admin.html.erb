<!-- app/views/portal/edit_admin.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">Edit <%= @user.role.titleize %></h1>
  <%= form_for(@user, url: registration_path(@user), method: :put) do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>
    <!-- Add fields for editing user details -->
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
    <!-- Add other fields here as needed -->
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>
