<%= form_with(model: ClassName.new, local: true, url: create_class_subject_path) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'control-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :subject, class: 'control-label' %>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Class and Subject', class: 'btn btn-primary' %>
  </div>
<% end %>
